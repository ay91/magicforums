<div class="form-container" id="comment-update">

    <%= form_for(comment, url: topic_post_comment_path(topic, post, comment), remote: true ,html: { id: "comment-update-form" }) do |f| %>


    <div class="form-group">
      <h4> <%= f.label :text_field, "Body", class:"form-text" %> </h4>
      <%= f.text_field :body, id: "comment_body_field", class: 'form-control ' %>
    </div>

    <div class="form-group text-center">
      <div class="btn btn-success btn-lg cancel-button">
        Cancel
      </div>
      <%= f.submit "Update Comment", class: "btn btn-success btn-lg" %>
    </div>

    <% end %>
  </div>
