<div class="form-container">

    <%= form_for(@comment, url: topic_post_comment_path(@topic, @post, @comment), html: { id: "comment-update-form" }) do |f| %>
    <h1 class="text-center">
      Update Comment
    </h1>
    <div class="form-button">      
      <button><%=link_to "Back to Posts", topic_posts_path(@topic)%></button>
    </div>
    <div class="form-group">
      <h4> <%= f.label :text_field, "Body", class:"form-text" %> </h4>
      <%= f.text_field :body, id: "comment_body_field", class: 'form-control ' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Update Comment", class: "btn btn-success btn-lg" %>
    </div>

    <% end %>
  </div>
