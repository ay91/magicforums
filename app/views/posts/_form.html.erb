<%= form_for(post, url: topic_posts_path(topic),authenticity_token: true, remote: true, html: { id: "post-create-form", multipart: true }) do |f| %>
<h1 class="text-center">
  Create Post
</h1>

<div class="form-container">
  <div class="form-group">
    <h4><%=f.label :image, "Post Image", class: "form-text"%></h4>
    <div id="preview-image">
      <% if @post.image? %>
      <%= image_tag @post.image, class: "img-settings img-responsive center-block" %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="preview-image">
      <%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
    </div>
  </div>

  <div class="form-group">
    <h4> <%= f.label :title_field, "Title",class: "form-text" %> </h4>
    <%= f.text_field :title, required: true, id: "post_title_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :text_field, "Body", class: "form-text" %> </h4>
    <%= f.text_field :body, id: "post_body_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Create Post", class: "btn btn-success btn-lg" %>
  </div>
</div>
<% end %>
