<div class="post-container text-center">

    <h1>Posts</h1>
    <button><%=link_to "Add New Post", new_topic_post_path(@topic), class: 'new-post'%></button>
    <button>  <%=link_to "Back to Topics", topics_path, class: 'back-to-topic' %></button>

    <div class="post-parent text-center">
        <% @posts.each do |post| %>
        <%= render partial: "post", locals: { post: post, topic: @topic } %>
        <%end%>
    </div>

    <%=paginate @posts%>

    <div class="post-form-container">
      <%= render partial: "form", locals: { post: @post, topic: @topic } %>
    </div>
</div>
