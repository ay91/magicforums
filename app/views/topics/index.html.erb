<div class="topic-container text-center">

  <h1>Topics</h1>

  <div class="new-topic">
    <%= link_to "Add New Topic", new_topic_path %>

    <% @topics.each do |topic| %>

          <div class="topic-parent">
              <div class="topic-child column-big">
                <h3><%= topic.title %></h3>
                <h5><%= topic.description %></h5>
                <%= link_to topic.title, topic_path(topic) %>
              </div>

              <div class="topic-child column-small">
                <%=link_to "Posted by #{topic.user.username} at #{topic.created_at}", root_path %>
              </div>

          </div>

    <% end %>
  </div>
</div>
