<div class="modal fade" id="modallogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Login</h4>
            </div>
            <div class="modal-body">
                <%= form_tag sessions_path do %>

                <div class="form-group">
                    <h4><%= label_tag "Email", nil, class: 'form-text' %></h4>
                    <%= text_field_tag :email, params[:email], :placeholder => "Enter Email Address", required: true, id: "user_email_field", class: 'form-control' %>
                </div>

                <div class="form-group">
                    <h4><%= label_tag "Password",nil, class: "form-text" %></h4>
                    <%= password_field_tag :password, nil, id: "user_password_field", :placeholder => "Enter password", required: true, class:
            'form-control' %>
                </div>

                <div class="form-group text-center">
                    <%= link_to "First time login?", new_user_path %>
                    <%= link_to "Forget Password?", new_password_reset_path%>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" name="commit" value="Log in" class="btn btn-primary btn-lg" data-disable-with="Log in">
                </div>
                <% end %>

            </div>
        </div>
    </div>
</div>
