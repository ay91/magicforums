<div class="form-container">

    <%= form_for(current_user, url: user_path(current_user), html: { id: "user-edit-form" }) do |f| %>
    <h1 class="text-center">
      Edit User Profile
    </h1>

    <div class="form-group">
       <h4> <%=f.label :image, "Profile Picture", class:'form-text'%> </h4>
      <div id="preview-image">
        <% if current_user.image? %>
          <%= image_tag current_user.image, class: "img-settings img-responsive center-block" %>
        <% end %>
      </div>

        <%= f.file_field :image, id: "user_image_field", class: 'form-control image-uploader' %>

        <h4> <%= f.label :email_field, "Email", class: 'form-text' %> </h4>
        <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>


        <h4> <%= f.label :password_digest_field, "Password", class: 'form-text' %> </h4>
        <%= f.text_field :password_digest, required: true, id: "user_password_field", class: 'form-control' %>

        <h4> <%= f.label :username_field, "Username", class: 'form-text' %> </h4>
        <%= f.text_field :username, required: true, id: "user_username_field", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
        <%= f.submit "Update Profile", class: "btn btn-success btn-lg" %>
        </div>

    <% end %>
  </div>
